<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.drama"
             Title="drama">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="sol.jpg" x:Name="btnsoldameianoite"
                         Clicked="btnsoldameianoite_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="plebeia.jpg" x:Name="btnaprincesaeaplebeia"
                         Clicked="btnaprincesaeaplebeia_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="extra.jpg" x:Name="btnextraordinario"
                         Clicked="btnextraordinario_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="cidade.jpg" x:Name="btncidadeperdida"
                         Clicked="btncidadeperdida_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>