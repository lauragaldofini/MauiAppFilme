<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.aventura">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="velozes.jpg" x:Name="btnvelozesefuriosos"
                         Clicked="btnvelozesefuriosos_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="velozes10.jpg" x:Name="btnvelozesefuriosos10"
                         Clicked="btnvelozesefuriosos10_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="enrolados.jpg" x:Name="btnenrolados"
                         Clicked="btnenrolados_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="jumanji.jpg" x:Name="btnjumanji"
                         Clicked="btnjumanji_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>