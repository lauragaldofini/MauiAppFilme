<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.terror"
             Title="terror"
             BackgroundColor="Beige">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="mal1.jpg" x:Name="btninvocacaodomal"
                         Clicked="btninvocacaodomal_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="mal2.jpg" x:Name="btninvocacaodomal2"
                         Clicked="btninvocacaodomal2_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="mal3.jpg" x:Name="btninvocacaodomal3"
                         Clicked="btninvocacaodomal3_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="freira.jpg" x:Name="btnafreira"
                         Clicked="btnafreira_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>