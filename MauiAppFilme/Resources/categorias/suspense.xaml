<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.suspense"
             Title="suspense">
    <VerticalStackLayout>
        <ScrollView>
        <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">

            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="fuja.jpg" x:Name="btnfuja"
                         Clicked="btnfuja_Clicked"/>


            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="hush.jpg" x:Name="btnhush"
                         Clicked="btnhush_Clicked"/>


            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="silencio.jpg" x:Name="btnsilencio"
                         Clicked="btnsilencio_Clicked"/>


            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="coraline.jpg" x:Name="btncoraline"
                         Clicked="btncoraline_Clicked"/>
            
             </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
