<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.suspense"
             Title="suspense">
    <VerticalStackLayout>
    <ScrollView>
        <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">

            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="carandiru.jpg" x:Name="btncarandiru"
                         Clicked="btncarandiru_Clicked"/>


            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="1917.jpg" x:Name="btn1917"
                         Clicked="btn1917_Clicked"/>


            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="assassinos.jpg" x:Name="btnassassinos"
                         Clicked="btnassassinos_Clicked"/>


            <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="front.jpg" x:Name="btnfront"
                         Clicked="btnfront_Clicked"/>

        </Grid>
    </ScrollView>
    </VerticalStackLayout>
</ContentView>
