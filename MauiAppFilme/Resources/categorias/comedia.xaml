<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.comedia">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="branquelas.jpg" x:Name="btnasbranquelas"
                         Clicked="btnasbranquelas_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="tuba.jpg" x:Name="btnespantatubaroes"
                         Clicked="btnespantatubaroes_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="extra.jpg" x:Name="btnextraordinario"
                         Clicked="btnextraordinario_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="cidade.jpg" x:Name="btncidadeperdida"
                         Clicked="btncidadeperdida_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>