<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.romance"
             Title="romance"
             BackgroundColor="Beige">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="cinco.jpg" x:Name="btncincopassos"
                         Clicked="btncincopassos_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="desastre.jpg" x:Name="btnbelodesastre"
                         Clicked="btnbelodesastre_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="tdsmenosvc.jpg" x:Name="btntodosmenosvoce"
                         Clicked="btntodosmenosvoce_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="porto.jpg" x:Name="btnportoseguro"
                         Clicked="btnportoseguro_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>
