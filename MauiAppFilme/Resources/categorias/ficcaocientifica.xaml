<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilme.Resources.categorias.ficcaocientifica">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
              ColumnDefinitions="*,*"
              Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="vingadores.jpg" x:Name="bntnvingadores"
                         Clicked="btnvingadores_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="starwars.jpg" x:Name="btnstarwars"
                         Clicked="btnstarwars_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="expanse.jpg" x:Name="btnexpanse"
                         Clicked="btnexpanse_Clicked"/>


                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" 
                         Source="avatar.jpg" x:Name="btnavatar"
                         Clicked="btnavatar_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>